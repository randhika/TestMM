<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="10.0dip"
    android:paddingBottom="5.0dip"
    android:paddingLeft="5.0dip"
    android:paddingRight="5.0dip"
    android:background="@color/bg_home_base">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="115.0dip"
        android:layout_marginBottom="15.0dip">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50.0dip"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:clickable="true"
            android:addStatesFromChildren="true"
            android:id="@+id/btn_from">
            <TextView
                android:layout_width="70dip"
                android:layout_height="match_parent"
                android:paddingLeft="10.0dip"
                android:paddingRight="10.0dip"
                android:gravity="center"
                android:background="@drawable/sea_label"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:text="@string/label_from"
                android:singleLine="true"
                android:clickable="false" />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:clickable="true"
                android:focusable="true"
                android:id="@+id/box_from">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingLeft="10.0dip"
                    android:gravity="center_vertical"
                    android:background="@drawable/sel_sea_station"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:text="虹桥火车站"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:clickable="false"
                    android:focusable="true"
                    android:id="@+id/tv_from" />
            </RelativeLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50.0dip"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:clickable="true"
            android:addStatesFromChildren="true"
            android:id="@+id/btn_to">
            <TextView
                android:layout_width="70dip"
                android:layout_height="match_parent"
                android:paddingLeft="10.0dip"
                android:paddingRight="10.0dip"
                android:gravity="center"
                android:background="@drawable/sea_label"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:text="@string/label_to"
                android:singleLine="true"
                android:clickable="false" />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:clickable="true"
                android:focusable="true"
                android:id="@+id/box_to">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingLeft="10.0dip"
                    android:gravity="center_vertical"
                    android:background="@drawable/sel_sea_station"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:text="浦东国际机场"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:clickable="false"
                    android:focusable="true"
                    android:id="@+id/tv_to" />
            </RelativeLayout>
        </LinearLayout>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5.0dip"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:scaleType="fitCenter"
            android:clickable="true"
            android:src="@drawable/sel_sea_wrap"
            android:id="@+id/btn_swap" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15.0dip"
        android:orientation="horizontal"
        android:padding="15.0dip"
        android:gravity="center_vertical"
        android:background="@drawable/sel_sea_time"
        android:clickable="true"
        android:focusable="true"
        android:id="@+id/btn_time">
        <ImageView
            android:layout_width="20.0dip"
            android:layout_height="20.0dip"
            android:layout_gravity="center_vertical"
            android:scaleType="fitCenter"
            android:src="@drawable/sea_time" />
        <TextView
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:paddingLeft="10.0dip"
            android:gravity="center_vertical"
            android:text="@string/label_time"
            android:textSize="20sp"
            android:textColor="@color/text_black_color02"/>
        <ImageView
            android:layout_width="15.0dip"
            android:layout_height="15.0dip"
            android:layout_marginRight="5.0dip"
            android:layout_gravity="center_vertical"
            android:scaleType="fitCenter"
            android:src="@drawable/arrow_r1" />
    </LinearLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="52.0dip"
        android:layout_marginLeft="30.0dip"
        android:layout_marginRight="30.0dip"
        android:paddingTop="5.0dip"
        android:paddingBottom="5.0dip"
        android:background="@drawable/sel_sea_button"
        android:textColor="@drawable/sel_sea_buttoncolor"
        android:textSize="20sp"
        android:textStyle="bold"
        android:text="@string/btn_search"
        android:id="@+id/btn_search"/>

</LinearLayout>
