<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="fill_parent"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <ScrollView android:scrollbars="vertical" android:layout_width="fill_parent" android:layout_height="0.0dip" android:layout_weight="1.0">
        <LinearLayout android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="wrap_content">
            <TextView android:background="@color/bg_home_base" android:paddingLeft="@dimen/padding_normal" android:paddingTop="@dimen/padding_medium" android:paddingRight="@dimen/padding_normal" android:paddingBottom="@dimen/padding_medium" android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="@string/input_search_guide" style="@style/txtS" />
            <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:background="@color/gray_background" android:paddingRight="@dimen/padding_normal" android:layout_width="fill_parent" android:layout_height="wrap_content">
                <ImageView android:id="@id/icon_home" android:padding="7.0dip" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/icn_myhome" />
                <TextView android:paddingRight="@dimen/padding_small" android:layout_width="0.0dip" android:layout_height="wrap_content" android:text="@string/input_search_title_home" android:layout_weight="1.0" style="@style/txtL" />
                <Button android:id="@id/add_button_home" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/padding_normal" android:layout_marginBottom="@dimen/padding_normal" android:text="@string/btn_plus_add" android:onClick="launchSearchHome" style="@style/btn_normal_btn03" />
            </LinearLayout>
            <TextView android:id="@id/no_setting_home" android:paddingLeft="@dimen/padding_normal" android:paddingTop="@dimen/padding_medium" android:paddingRight="@dimen/padding_normal" android:paddingBottom="@dimen/padding_medium" android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="@string/input_search_no_setting" style="@style/txtS" />
            <LinearLayout android:orientation="vertical" android:id="@id/setting_home" android:layout_width="fill_parent" android:layout_height="wrap_content" />
            <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:background="@color/gray_background" android:paddingRight="@dimen/padding_normal" android:layout_width="fill_parent" android:layout_height="wrap_content">
                <ImageView android:id="@id/icon_goal" android:padding="7.0dip" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/icn_myoffice" />
                <TextView android:paddingRight="@dimen/padding_small" android:layout_width="0.0dip" android:layout_height="wrap_content" android:text="@string/input_search_title_goal" android:layout_weight="1.0" style="@style/txtL" />
                <Button android:id="@id/add_button_goal" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/padding_normal" android:layout_marginBottom="@dimen/padding_normal" android:text="@string/btn_plus_add" android:onClick="launchSearchGoal" style="@style/btn_normal_btn03" />
            </LinearLayout>
            <TextView android:id="@id/no_setting_goal" android:paddingLeft="@dimen/padding_normal" android:paddingTop="@dimen/padding_medium" android:paddingRight="@dimen/padding_normal" android:paddingBottom="@dimen/padding_medium" android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="@string/input_search_no_setting" style="@style/txtS" />
            <LinearLayout android:orientation="vertical" android:id="@id/setting_goal" android:layout_width="fill_parent" android:layout_height="wrap_content" />
        </LinearLayout>
    </ScrollView>
    <LinearLayout android:orientation="horizontal" android:background="@color/gray" android:paddingTop="@dimen/padding_large" android:paddingBottom="@dimen/padding_large" android:layout_width="fill_parent" android:layout_height="wrap_content">
        <Button android:id="@id/btn_start" android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="@string/input_search_btn_start" android:onClick="launchCountDown" style="@style/btn_big_btn02" />
    </LinearLayout>
    <RelativeLayout android:id="@id/AdView" android:layout_width="fill_parent" android:layout_height="wrap_content" />
</LinearLayout>